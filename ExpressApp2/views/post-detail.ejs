        }

        input[type=text], select, textarea {
            width: 50%;
            padding: 12px;
            border: 1px solid #ccc;
            border-radius: 4px;
            resize: vertical;
        }

        .col-25 {
            float: left;
            width: 75%;
            margin-top: 6px;
        }


        textarea {
            width: 100%;
            height: 150px;
            padding: 12px 20px;
            box-sizing: border-box;
            border: 2px solid #ccc;
            border-radius: 4px;
            background-color: #f8f8f8;
            resize: none;
        }

        .imgcontainer {
            float: left;
            border-radius: 50%;
            margin: 0;
        }

        .topright {
            margin-left: 1120px;
            top: 10px;
            width: 50%;
        }

        img.avatar {
            width: 30%;
            border-radius: 30%;
        }

        @media screen and (max-width: 800px) {
            .col-25, input[type=submit] {
                width: 100%;
                margin-top: 0;
                padding: 0;
            }
        }

        .row:after {
            content: "";
            display: table;
            clear: both;
        }
    </style>
</head>

